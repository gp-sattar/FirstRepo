<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:id="@+id/radio_line_layout"
        android:orientation="vertical">
        <View
            android:layout_width="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/uppper_line_main"
            android:background="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_icon"
            android:src="@drawable/radio_24dp"/>


        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:id="@+id/lower_line_main"
            android:layout_gravity="center_horizontal"
            android:background="#000000"/>

    </LinearLayout>

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:id="@+id/horizontal_line"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/radio_line_layout"
        android:background="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="17dp"
        android:id="@+id/tv_task_name_main"
        android:layout_marginLeft="@dimen/minimum"
        android:layout_toRightOf="@+id/horizontal_line"
        android:textColor="@color/black"
        android:text="Task View"/>

</RelativeLayout>